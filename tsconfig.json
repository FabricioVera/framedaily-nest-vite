{
  /*
    Esta es la configuración base de TypeScript para todo el monorepo.
    Los tsconfig.json de cada paquete extenderán de este.
  */
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "sourceMap": true,
    "baseUrl": "."
  }
}
