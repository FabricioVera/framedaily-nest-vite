{
  "name": "framedaily",
  "version": "1.0.0",
  "private": true,
  "description": "Un juego para adivinar el personaje del dÃ­a",
  "scripts": {
    "dev": "concurrently \"pnpm --filter api-framedaily start:dev\" \"pnpm --filter web dev\"",
    "build": "pnpm -r run build",
    "typeorm": "pnpm --filter api typeorm",
    "db:migration:generate": "pnpm typeorm -- -d packages/api/dist/data-source.js migration:generate",
    "db:migration:run": "pnpm typeorm -- migration:run -d packages/api/dist/data-source.js"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "cpx": "^1.5.0",
    "tsup": "^8.5.0",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "dotenv": "^17.2.3"
  }
}
